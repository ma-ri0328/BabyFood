%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title BabyFood
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application'
  %body
    .Header
      .HeaderNav
        %h1.title 
          %p.SubTitle 子どもの成長をかんがえる
          = link_to 'BabyFood', posts_path
        .UserNav
          = link_to "レシピを書く", new_post_path
    = yield
    %footer
      %p Copyright BabyFood 2020.
